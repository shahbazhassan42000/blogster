<%= javascript_include_tag 'signup'%>
<div class="row no-gutters">
  <section class='col-md-4'>
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signup" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, class: "form-control", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control", autocomplete: "email", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, class: "form-control", autocomplete: "new-password", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", required: true %>
      </div>

      <% if request.subdomain.blank? %>
        <%= f.fields_for :company do |company_form| %>
          <div class="form-group">
            <%= company_form.label :company %>
            <%= company_form.text_field :name, class: "form-control", required: true,id: 'company_name_field' %>
          </div>
          <div class="form-group" style="display: none;" id='slug_box'>
            <div class='card p-3 bg-light'>
              <p class='text-secondary'>
                Your portal will be live at:
              </p>
              <strong class='text-primary'>
                http://<span id='slug_view'></span>.lvh.me
              </strong>
            </div>
          </div>
          <%= f.hidden_field :slug, value: '', id: 'slug_field'%>
        <% end %>
      <% else %>
        <%= f.hidden_field :role, value: :author %>
        <%= f.hidden_field :company_id, value: @company.id%>

      <% end %>

      <div class="form-group">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </section>
  <section class='col-md-8'>
    <%= image_tag 'sign_up.gif'%>
  </section>
</div>
