<%= form_with(model: blog, url: blog.id ? user_blog_path(blog.author, blog) : user_blogs_path(current_user) ) do |form| %>
  <div class="form-group">
    <%= form.label :title, class: 'font-weight-bold' %>
    <%= form.text_field :title, class: 'form-control', placeholder: 'Enter the title of your blog' %>
  </div>

  <div class="form-group">
    <%= form.label :category_id, 'Category', class: 'font-weight-bold' %>
    <%= form.collection_select :category_id, Category.for_company(@company), :id, :name, { prompt: 'Select a category' }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :content, class: 'font-weight-bold' %>
    <%= form.text_area :content, class: 'form-control', rows: 10, placeholder: 'Write your blog content here' %>
  </div>

  <div class="form-group">
    <%= form.label :excerpt, class: 'font-weight-bold' %>
    <%= form.text_area :excerpt, class: 'form-control', rows: 4, placeholder: 'Enter a short excerpt of your blog' %>
  </div>

  <div class="form-group">
    <%= form.label :featured_image, class: 'font-weight-bold' %>
    <%= form.file_field :featured_image, class: 'form-control-file', accept: 'image/*' %>
  </div>

  <div class="form-group">
    <%= form.submit blog.id ? 'Update Blog' : 'Create Blog', class: 'btn btn-primary' %>
  </div>
<% end %>