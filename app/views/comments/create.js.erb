<% if flash[:alert].present? %>
  $("#comment_error_message").text('<%= flash[:alert] %>');
  $("#comment_error").show();
<% else %>
  $("#comments_list").append('<%= j render "shared/comment", comment: @comment %>');
  $('#comment_modal').hide();
  $('#no_comments_img').hide();
  $("#comment_text_field").val('');
<% end %>