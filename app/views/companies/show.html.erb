<section class='row justify-content-center'>
  <main class='col-md-8 border-right'>
    <div class='d-flex flex-column align-items-center'>
       <h1>Blogs</h1>
       <%= current_user%>
    </div>
  </main>
  <aside class='col-md-4'>
    <div class='d-flex flex-column align-items-center'>
      <% if current_user_is_owner? %>
        <%= form_with model: @category, class:'d-flex flex-column'  do |f|%>
          <%= f.text_field :name, placeholder: 'Category name', class: 'form-control' %>
          <%= f.hidden_field :company_id, value: @company.id%>
          <%= f.hidden_field :owner_id, value: current_user.id %>
          <%= f.submit 'Add Category', class: 'btn btn-primary shadow mt-3' %>
        <% end %>
      <% end %>
    </div>
  </aside>
</section>